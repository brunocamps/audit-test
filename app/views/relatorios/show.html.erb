<%= content_for :title, "Relatorios ##{@relatorio.id}" %>
<%= turbo_stream_from @relatorio %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Relatorios", relatorios_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Relatorio #<%= @relatorio.id %>
    </h1>
    <%= link_to t("edit"), edit_relatorio_path(@relatorio), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @relatorio %>
  </div>
</div>
