<%= content_for :title, "Relatorios" %>
<%= turbo_stream_from :relatorios %>

<h1>Gerar relatório</h1>

<div>
  <label for="area">Selecione a Área:</label>
  <%= select_tag "area", options_for_select([["Financeira", 1], ["Tecnologia da Informação", 2], ["Administrativo", 3]]) %>
</div>

<br>
<br>


<div>
  <label for="area">Selecione o trimestre:</label>
  <%= select_tag "area", options_for_select([["Janeiro-Março", 1], ["Abril-Junho", 2], ["Julho-Setembro", 3]]) %>
</div>
<br>
<br>

<%= button_tag "Gerar", type: "submit", class: "btn-primary" %>


<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Relatorios</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Relatorio"), new_relatorio_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("relatorios" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "relatorios/index", collection: @relatorios, as: :relatorio, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Relatorio</p>
        <%= link_to t("shared.scaffold.new.title", model: "Relatorio"), new_relatorio_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
