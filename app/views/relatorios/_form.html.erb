<%= form_with(model: relatorio) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), relatorios_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), relatorio_path(@relatorio), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
