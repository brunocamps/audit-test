<%= content_for :title, "Verifications" %>
<%= turbo_stream_from :verifications %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Verifications</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @verifications, :name, "Name", class: "text-gray-700 mr-1" %>
        <%= sortable @verifications, :goal, "Goal", class: "text-gray-700 mr-1" %>
        <%= sortable @verifications, :deadline, "Deadline", class: "text-gray-700 mr-1" %>
        <%= sortable @verifications, :weight, "Weight", class: "text-gray-700 mr-1" %>
        <%= sortable @verifications, :grade, "Grade", class: "text-gray-700 mr-1" %>
        <%= sortable @verifications, :evaluation_id, "Evaluation", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Verification"), new_verification_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("verifications" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "verifications/index", collection: @verifications, as: :verification, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Verification</p>
        <%= link_to t("shared.scaffold.new.title", model: "Verification"), new_verification_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
