<div id="<%= dom_id verification %>" class="border rounded p-4">

  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Avaliação pertencente</p>
    <p class="text-base font-medium text-gray-700"><%= verification.evaluation.name %></p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Verificação</p>
    <p class="text-base font-medium text-gray-700"><%= verification.name %></p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Meta</p>
    <p class="text-base font-medium text-gray-700"><%= verification.goal %></p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Prazo</p>
    <p class="text-base font-medium text-gray-700"><%= verification.deadline %></p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Peso</p>
    <p class="text-base font-medium text-gray-700"><%= verification.weight %></p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Avaliação (porcentagem em decimal)</p>
    <p class="text-base font-medium text-gray-700"><%= verification.grade %></p>
  </div>
  
  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Pontuação</p>
    <p class="text-base font-medium text-gray-700"><%= verification.punctuation %></p>
  </div>

  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Observações da autoria</p>
    <p class="text-base font-medium text-gray-700"><%= verification.observations %></p>
  </div>

  <div class="mb-4">
    <p class="text-lg font-bold text-blue-500">Auditado por: </p>
    <p class="text-base font-medium text-gray-700"><%= verification.last_updated_by %></p>
    <p class="text-base font-medium text-gray-700"><%= verification.updated_at.strftime('%d/%m/%Y') %></p>
  </div>

</div>
