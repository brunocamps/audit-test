<%= form_with(model: evaluation) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :company_area_id %>
    <%= form.text_field :company_area_id, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), evaluations_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), evaluation_path(@evaluation), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
